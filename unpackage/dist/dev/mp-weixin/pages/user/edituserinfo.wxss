page {
  background: #f4f4f4;
}
.list-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  /* align-items:baseline; */
  padding: 20rpx 30rpx;
  line-height: 60rpx;
  position: relative;
  background: #fff;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.list-cell.log-out-btn {
  margin-top: 40rpx;
}
.list-cell.log-out-btn .cell-tit {
  color: #303133;
  text-align: center;
  margin-right: 0;
}
.list-cell.cell-hover {
  background: #fafafa;
}
.list-cell.b-b:after {
  left: 30rpx;
}
.list-cell.m-t {
  margin-top: 16rpx;
}
.list-cell .header_img {
  width: 100rpx;
  height: 100rpx !important;
  border-radius: 100rpx;
}
.list-cell .cell-more {
  /* align-self: baseline; */
  font-size: 30rpx;
  color: #333;
  margin-left: 10rpx;
}
.list-cell .cell-tit {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 30rpx;
  color: #333;
  margin-right: 10rpx;
}
.list-cell .cell-tip {
  font-size: 28rpx;
  color: #333;
}
.list-cell .uni-input {
  text-align: right;
  width: 500rpx;
}
.list-cell .cell-content {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
.list-cell .uni-padding-wrap {
  font-size: 32rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.list-cell radio {
  -webkit-transform: scale(0.75);
          transform: scale(0.75);
}

